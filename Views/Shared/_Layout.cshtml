<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Employee Self Service</title>

    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/adminlte.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        /* Make sidebar scrollable */
        .sidebar {
            max-height: 80vh;
            overflow-y: auto;
        }

        .nav-treeview .nav-item .nav-link {
            padding-left: 20px;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Navbar content -->
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="Home" class="brand-link">
                <img src="~/img/logokomatsu.png" alt="Komatsu Logo" height="60px" width="180px" style="padding-right: 10px">
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Single Dropdown for All Sidebar Items -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                             with font-awesome or any other icon font library -->
                        <li class="nav-item menu-open">
                            <a href="#" class="nav-link active">
                                <i class="nav-icon fas fa-users"></i>
                                <p>
                                    Employee Settings
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="EBank" asp-action="Index">
                                        <i class="nav-icon fas fa-university"></i>
                                        <p>Bank</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="ECity" asp-action="Index">
                                        <i class="nav-icon fas fa-city"></i>
                                        <p>City</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="ECostCenter" asp-action="Index">
                                        <i class="nav-icon fas fa-building"></i>
                                        <p>Cost Center</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="ECountry" asp-action="Index">
                                        <i class="nav-icon fas fa-globe"></i>
                                        <p>Countries</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="EDepartment" asp-action="Index">
                                        <i class="nav-icon fas fa-building-user"></i>
                                        <p>Departments</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="EEducation" asp-action="Index">
                                        <i class="nav-icon fas fa-user-graduate"></i>
                                        <p>Education</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="EEmployeeStatus" asp-action="Index">
                                        <i class="nav-icon fas fa-user-tag"></i>
                                        <p>Employee Status</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="EGrade" asp-action="Index">
                                        <i class="nav-icon fas fa-arrow-down-short-wide"></i>
                                        <p>Grade</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="EGradeCategory" asp-action="Index">
                                        <i class="nav-icon fas fa-arrow-down-a-z"></i>
                                        <p>Grade Category</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="EHardshipLocation" asp-action="Index">
                                        <i class="nav-icon fas fa-ship"></i>
                                        <p>Hardship Location</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="EInsurance" asp-action="Index">
                                        <i class="nav-icon fas fa-file-circle-check"></i>
                                        <p>Insurance</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="EMaritalStatus" asp-action="Index">
                                        <i class="nav-icon fas fa-children"></i>
                                        <p>Marital Status</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="ENationality" asp-action="Index">
                                        <i class="nav-icon fas fa-globe"></i>
                                        <p>Nationalities</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="EOccupation" asp-action="Index">
                                        <i class="nav-icon fas fa-file-lines"></i>
                                        <p>Occupation</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="EPosition" asp-action="Index">
                                        <i class="nav-icon fas fa-sitemap"></i>
                                        <p>Position</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="EProvince" asp-action="Index">
                                        <i class="nav-icon fas fa-earth-europe"></i>
                                        <p>Province</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="ERelationship" asp-action="Index">
                                        <i class="nav-icon fas fa-people-roof"></i>
                                        <p>Relationship</p>
                                    </a>
                                </li> 
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="EReligion" asp-action="Index">
                                        <i class="nav-icon fas fa-person-praying"></i>
                                        <p>Religion</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="ESection" asp-action="Index">
                                        <i class="nav-icon fas fa-sitemap"></i>
                                        <p>Section</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>@ViewData["Title"]</h1>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <strong>Copyright &copy; 2024 <a href="https://www.komi.co.id/komatsu-marketing-and-support-indonesia" target="_blank">Komatsu Marketing and Support Indonesia</a>.</strong>
            All rights reserved.
        </footer>
    </div>

    <!-- jQuery and Bootstrap JavaScript (Ensure correct order) -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/adminlte.min.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
